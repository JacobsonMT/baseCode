<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <id>baseCode:null</id>
    <name>baseCode</name>
    <groupId>baseCode</groupId>
    <currentVersion>0.2.11</currentVersion>
    <organization>
        <name>Columbia University</name>
        <url>http://www.columbia.edu</url>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <description>Data structures, math and statistics tools, and utilities that are often
        needed across projects.</description>
    <shortDescription>General-purpose code</shortDescription>
    <siteAddress>microarray</siteAddress>
    <siteDirectory>/proj/pavlidis/protected/baseCode</siteDirectory>
    <repository>
        <connection>scm:cvs:ext:${maven.username}@adgate.cu-genome.org:/fsnode/projects/cvs/pavlab:baseCode</connection>
    </repository>
    <developers>
        <developer>
            <name>Paul Pavlidis</name>
            <id>pavlidis</id>
            <email>pavlidis@dbmi.columbia.edu</email>
            <organization>Columbia University</organization>
        </developer>
        <developer>
            <name>William Braynen</name>
            <id>wbraynen</id>
            <email>wbraynen@ic.sunysb.edu</email>
            <organization>Columbia University</organization>
        </developer>
        <developer>
            <name>Homin Lee</name>
            <id>hkl7</id>
            <email>hkl7@cs.columbia.edu</email>
            <organization>Columbia University</organization>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>LGPL</name>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>colt</groupId>
            <artifactId>colt</artifactId>
            <version>1.2.0</version>
            <type>jar</type>
            <url>http://dsd.lbl.gov/~hoschek/colt/</url>
            <properties>
                <category>lib</category>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>3.1.6-bin</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>hb</groupId>
            <artifactId>hb</artifactId>
            <version>beta2</version>
            <type>jar</type>
            <url>http://www.braju.com/download/sure/index.html</url>
        </dependency>
        <dependency>
            <groupId>ostermiller</groupId>
            <artifactId>ostermillerutils</artifactId>
            <jar>ostermillerutils_1_04_03_for_java_1_4.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>oro</groupId>
            <artifactId>oro</artifactId>
            <version>2.0.7</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>jena</groupId>
            <artifactId>jena</artifactId>
            <jar>jena.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>icu4j</groupId>
            <artifactId>icu4j</artifactId>
            <jar>icu4j.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>concurrent</groupId>
            <artifactId>concurrent</artifactId>
            <version>1.3.4</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>1.3.0</version>
            <jar>commons-net-1.3.0.jar</jar>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/Test*.java</include>
            </includes>
            <excludes>
                <exclude>**/gui/Test*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/test</directory>
                    <includes>
                        <include>**/data/*.txt</include>
                        <include>**/data/*.xml</include>
                        <include>**/data/*.csv</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src</directory>
                <includes>
                    <include>**/alert.gif</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>
</project>

