<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <id>baseCode</id>
    <groupId>baseCode</groupId>
    <currentVersion>0.3.1-RC1</currentVersion>
    <organization>
        <name>University of British Columbia Bioinformatics Centre</name>
        <url>http://bioinformatics.ubc.ca</url>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <description><![CDATA[Data structures, math and statistics tools, and utilities that are often needed across projects.]]></description>
    <shortDescription>General-purpose code</shortDescription>
    <siteAddress>microarray</siteAddress>
    <siteDirectory>/proj/pavlidis/protected/baseCode</siteDirectory>
    <repository>
        <connection>scm:cvs:ext:${maven.username}@lurai.cmmt.ubc.ca:/raid/cvs/pavlidis:baseCode</connection>
    </repository>
    <developers>
        <developer>
            <name>Paul Pavlidis</name>
            <id>pavlidis</id>
            <email>paul@bioinformatics.ubc.ca</email>
            <organization>Columbia University</organization>
        </developer>
        <developer>
        	<name>Kiran Keshav</name>
        	<id>keshav</id>
        	<email>keshav@cu-genome.org</email>
        	<organization>Columbia University</organization>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>colt</groupId>
            <artifactId>colt</artifactId>
            <version>1.2.0</version>
            <type>jar</type>
            <url>http://dsd.lbl.gov/~hoschek/colt/</url>
            <properties>
                <category>lib</category>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>3.1.6-bin</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
            <type>jar</type>
        </dependency>	
        <dependency>
			   <groupId>commons-httpclient</groupId>
			   <artifactId>commons-httpclient</artifactId>
			   <version>3.0.1</version>
			   <type>jar</type>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.3</version>
			<type>jar</type>
		</dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <properties>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>hb</groupId>
            <artifactId>hb</artifactId>
            <version>beta2</version>
            <type>jar</type>
            <url>http://www.braju.com/download/sure/index.html</url>
        </dependency>
        <dependency>
            <groupId>opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>1.3</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>oro</groupId>
            <artifactId>oro</artifactId>
            <version>2.0.7</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>jena</groupId>
            <artifactId>jena</artifactId>
            <jar>jena.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>concurrent</groupId>
            <artifactId>concurrent</artifactId>
            <version>1.3.4</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>1.3.0</version>
            <jar>commons-net-1.3.0.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>1.1</version>
            <jar>commons-configuration-1.1.jar</jar>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.1</version>
            <jar>commons-lang-2.1.jar</jar>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>rserve</groupId>
            <artifactId>JRclient</artifactId>
            <version>RF503</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/Test*.java</include>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/AllTests.java</exclude>
                <exclude>**/gui/Test*.java</exclude>
                <exclude>**/AbstractTest*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/test</directory>
                    <includes>
                        <include>**/data/*.txt</include>
                        <include>**/data/*.xml</include>
                        <include>**/data/*.zip</include>
                        <include>**/data/*.csv</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src</directory>
                <includes>
                    <include>**/alert.gif</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>
</project>

