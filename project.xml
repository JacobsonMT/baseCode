<?xml version="1.0"?>

<project 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/xsd/ http://maven.apache.org/xsd/maven-project-3.0.0.xsd"
xmlns:jnlp="http://www.w3.org/2001/XMLSchema-instance">
    <pomVersion>3</pomVersion>
        <id>baseCode</id>
    <name>baseCode</name>
    <groupId>baseCode</groupId>

    <currentVersion>0.2.1</currentVersion>
    <organization>
        <name>Columbia University</name>
        <url>http://www.columbia.edu</url>
    </organization>
    <inceptionYear>2003</inceptionYear>
    <description>Data structures, math and statistics tools, and utilities that are often needed across projects.</description>
    <shortDescription>General-purpose code</shortDescription>
    <siteAddress>microarray</siteAddress>
    <siteDirectory>/proj/pavlidis/protected/baseCode</siteDirectory>
    <repository>
        <connection>scm:cvs:ext:${maven.username}@adgate.cu-genome.org:/fsnode/projects/cvs/pavlab:baseCode</connection>
    </repository>

    <developers>
        <developer>
            <name>Paul Pavlidis</name>
            <id>pavlidis</id>
            <email>pavlidis@dbmi.columbia.edu</email>
            <organization>Columbia University</organization>
            <roles/>
        </developer>
        <developer>
            <name>William Braynen</name>
            <id>wbraynen</id>
            <email>wbraynen@ic.sunysb.edu</email>
            <organization>Columbia University</organization>
            <roles/>
        </developer>
        <developer>
            <name>Homin Lee</name>
            <id>hkl7</id>
            <email>hkl7@cs.columbia.edu</email>
            <organization>Columbia University</organization>
            <roles/>
        </developer>
    </developers>
        <licenses>
        <license><name>GPL</name></license>
    </licenses>
    <dependencies>
    
              <dependency>
            <groupId>colt</groupId>
            <artifactId>colt</artifactId>
              <version>1.0.3</version>
            <type>jar</type>
            <url>http://hoschek.home.cern.ch/hoschek/colt/V1.0.3/download</url>
            <properties>
                <category>lib</category>
                <jnlp.jar>true</jnlp.jar>
            </properties>
        </dependency>
        
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>3.0.8-stable-bin</version>
            <type>jar</type>
             <jnlp.jar>true</jnlp.jar>
            <properties/>
        </dependency>
        
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.3</version>
             <jnlp.jar>true</jnlp.jar>
            <type>jar</type>
            <properties/>
        </dependency>
        
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
             <jnlp.jar>true</jnlp.jar>
            <type>jar</type>
            <properties/>
        </dependency>
      
        <dependency>
            <groupId>hb</groupId>
            <artifactId>hb</artifactId>
            <version>beta2</version>
            <type>jar</type>
            <url>http://www.braju.com/download/sure/index.html</url>
        </dependency>
        
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/Test*.java</include>
            </includes>
            <excludes>
                <exclude>**/gui/Test*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/test</directory>
                    <includes>
                        <include>**/data/*.txt</include>
                        <include>**/data/*.xml</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src</directory>
                <includes>
                    <include>**/alert.gif</include>
                </includes>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>
    <properties/>
</project>